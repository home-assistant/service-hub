{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@lib/common": [
        "libs/common/src"
      ],
      "@lib/common/*": [
        "libs/common/src/*"
      ],
      "@lib/sentry": [
        "libs/sentry/src"
      ],
      "@lib/sentry/*": [
        "libs/sentry/src/*"
      ]
    },
    "importHelpers": true,
    "noEmitHelpers": true
  }
}